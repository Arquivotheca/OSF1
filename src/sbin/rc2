# don't allow a SIGINT to kill this script, just the executing child
trap "echo" 2

PATH=/sbin:/usr/sbin:/usr/bin
export PATH

# Just exit if /usr not mounted.
if [ ! -d "/usr/sbin" ]
then
	exit
fi

#
# Determine action from runlevel information
#
set `who -r`
if [ $9 = "S" ]; then
        stty sane tab3 2>/dev/null
        echo "The system is coming up. Please wait..."
        BOOT=yes
elif [ $7 = "2" ]; then
        echo "Changing to system level 2."
        if [ -d /sbin/rc2.d ]; then
                for f in /sbin/rc2.d/K*
                do
                        if [ -s $f ]; then
                                /sbin/sh $f stop
                        fi
                done
        fi
fi

if [ -d /sbin/rc2.d ]; then
        for f in /sbin/rc2.d/S*
        do
                if [ -s $f ]; then
                        /sbin/sh $f start
                fi
        done
fi

if [ "$BOOT" = "yes" -a $7 = "2" ]; then
        echo "The system is ready."
elif [ $7 = "2" ]; then
        echo "Change to state 2 has been completed."
fi



