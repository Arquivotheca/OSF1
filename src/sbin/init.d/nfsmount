#
# Mount nfs filesystems
#
case $1 in
'start')
        echo "Mounting NFS filesystems"
        /sbin/mount -a -v -t nfs
        ;;
'stop')
        echo "Unmounting NFS filesystems"
        /sbin/umount -Af -t nfs
	/sbin/umount -b
        ;;
*)
        echo "usage: nfsmount {start|stop}"
        ;;
esac
