.\"                      Modification History
.\"
.\" 08/24/90
.\"  Added \& to entry level string comparison, to match \& added to
.\"  string definition
.\"
.\" 08/23/90
.\"  First version distributed with dOATS.  Added \& to .ds A<n> \\$<n>
.\"  lines in .En macro, to "hide" . and ' characters at the beginning
.\"  of index entries.
.\"
.\" 09/13/89
.\"	copyright notice added
.\"	\(en replaced with \- since *nroff doesn't handle \(en
.\"
.\" 06/27/89
.\"	Increased point size of body text to 10 (or \\n(PS-1), and of 
.\"       headings to 13 (or \\n(PS+2);
.\"	Default page format is .U8 instead of .U7
.\"	Added lines adapting the HO, PO and LL registers, so the index
.\"       can take up the whole page.
.\"
.\" 07/19/88
.\"   added .nh command after calling .2C macro
.\"   added seperator line at end of macros to separate header from .srt file
.\"   changed .ne 3 to .ne 10
.\"   changed .ne command for 1st indent to 4
.\"   changed ident wraps so Primary wrap is 2P in (temp -2P), secondary 3P
.\"	(temp -2P), etc. (i.e. shift everything right 1 pica)
.\"   changed .Ct macro: "(cont.)" to print in Roman instead of Italic
.\"
.\" 12/12/87-01/04/88
.\"   sccs id & header comments added
.\"   "Modification History" comments added
.\"   moved test of Master/notMaster index (for title suppression) to just
.\"	before point where book title / page data is to be printed.
.\"   restored  .ne  commands that were in Nov. '86 version
.\"	(fixed problem of missing continuation headers)
.\"   commented out ".ne 3" command that was added in early version
.\"   added .UT "index" after .U7, and removed all  .tl stuff at end of
.\"	.En macro that used to handle printing & spacing of Index title
.\"   deleted \& lines that bounded area reserved for Index comments -- wasn't
.\"	used by anyone anyway -- allows for more index text on 1st page
.\"   deleted \0 trailing spaces that were a part of Pg string, and inserted
.\"	"  ("space) in front of appends to Pg string instead
.\"		- this fixes "short lines" problem because \0 is not
.\"		  breakable, and lines would break at spaces between words
.\"		  if any instead of between book titles & page numbers
.\"
.\" 07/15/87
.\"   .ne commands deleted everywhere in .En macro
.\"   .ne 3  command added to .En macro after book title assigned to Tl
.\"
.\" Nov. '86
.\"   archived original(?) version
.\"
.\"------------------------------------------------------------------------
.\"
.		\" change next line for different size
.U8
.	\" These next 3 lines necessary to get text body full length of page
.	\" (make sure they appear after the .U8 or .U7)
.nr LL +\n(HOu
.nr PO -\n(HOu
.nr HO 0
.UT "Index"
.\"		Main entry parameters
.de l1
.br
.ul 0
.if n .ul 99	\" Font: underline in nroff
.if t .ft B	\"	 bold in troff
.ps \\n(PS-2	\" Point size
.in 2P		\" Wrap point. To change, edit this and the next line
.ti -2P
..
.\"		Level 1 sub-entry parameters
.de l2
.br
.ul 0
.ft R		\" Font
.ps \\n(PS-2	\" Point size
.in 3P		\" Wrap point. To change, edit this and the next line
.ti -2P
..
.\"		Level 2 sub-entry parameters
.de l3
.br
.ft R		\" Font
.ps \\n(PS-2	\" Point size
.in 4P		\" Wrap point. To change, edit this and the next line
.ti -2P
..
.\"		Level 3 sub-entry parameters
.de l4
.br
.ft R		\" Font
.ps \\n(PS-2	\" Point size
.in 5P		\" Wrap point. To change, edit this and the next line
.ti -2P
..
.\"		Level 4 sub-entry parameters
.de l5
.br
.ft R		\" Font
.ps \\n(PS-2	\" Point size
.in 6P		\" Wrap point. To change, edit this and the next line
.ti -2P
..
.nr Gu 0
.\"	Alphabetical Guide Headers
.\"		To eliminate guide heads, remove this macro
.de Gu
.br
.ne 0
.in 0
.ps \\n(PS+2		\" Point size
.vs \\n(VS+2		\" Vertical spacing
.ie \\n(Gu \{\
.	ie n .sp 2 	\" Space before the header 
.	el .sp 3u*\\n(PDu
.\}
.el \{\
.	nr Gu 1
.	sp -1
.\}
.ne 7
.if n .ft I	\" Font: underline in nroff
.if t .ft HB	\"	 helvetica bold in troff
\\$1 \\$2
.sp \\n(PDu
.ne 0
..
.\"	Entry macro: one call per index entry
.de En
.nr A1 \\n(.$-1
.ds Pg \fR,
.if !\&\\$2\\*(A2 \{\
.	l1
.	ne 4
\&\\$2\c
.	ne 0
.	ds A3
.	ds Tl
.\}
.ds A2 \&\\$2
.nr M2 1
.if !\\$5 .if !\&\\$3\\*(A3 \{\
.	l2
.	ne 3
\&\\$3\c
.	ne 0
.	ds A4
.	ds Tl
.\}
.ds A3 \&\\$3
.nr M3 1
.if !\\$6 .if !\&\\$4\\*(A4 \{\
.	l3
.	ne 3
\&\\$4\c
.	ne 0
.	ds A5
.	ds Tl
.\}
.ds A4 \&\\$4
.nr M4 1
.if !\\$7 .if !\&\\$5\\*(A5 \{\
.	l4
.	ne 3
\&\\$5\c
.	ne 0
.	ds A6
.	ds Tl
.\}
.ds A5 \&\\$5
.nr M5 1
.if !\\$8 .if !\&\\$6\\*(A6 \{\
.	l5
.	ne 3
\&\\$6\c
.	ne 0
.	ds Tl
.\}
.ds A6 \&\\$6
.nr M6 1
.\"
.\" if doing Master Index and if book title different from
.\"	previous, insert it, otherwise output page info only
.\"
.if \\n(Ma .if !\\*(Tl\\$\\n(A1 .as Pg " \fI\\$\\n(A1\fP
.if \\$1! .ie n .as Pg " \fI
.	el .as Pg " \fB
.as Pg " \\$\\n(.$\fR\c
.\"
.\" save book title
.\"
.ds Tl \\$\\n(A1
.\"
.if !\\$1C \{\
.	ne 3
\\*(Pg		\" Remove this line to prevent page number printing
.	ne 0
.\}
.nr M2 0
.nr M3 0
.nr M4 0
.nr M5 0
.nr M6 0
..
.nr M2 0
.nr M3 0
.nr M4 0
.nr M5 0
.nr M6 0
.\"	Continue: Puts out the (cont.) statement if needed at top of
.\"		  a new column
.de Ct
.if \\n(M2 \{\
.	l1
\\*(A2 \fR(cont.)\fP
.	l2
.\}
.if \\n(M3 \{\
.	l2
\\*(A3 \fR(cont.)\fP
.	l3
.\}
.if \\n(M4 \{\
.	l3
\\*(A4 \fR(cont.)\fP
.	l4
.\}
.if \\n(M5 \{\
.	l4
\\*(A5 \fR(cont.)\fP
.	l5
.\}
.if \\n(M6 \{\
.	l5
\\*(A6 \fR(cont.)\fP
.	l6
.\}
..
.\"	Append Ct to the multicolumn macros of -mu or -ms
.am C2
.Ct
..
.am C1
.Ct
..
.\"
.OF '''\fHIndex\\-\f(HB\\\\n(PN\s0\fP'        \" Odd footer
.EF '\fHIndex\\-\f(HB\\\\n(PN\s0\fP'''        \" Even footer
.af PN 1		\" Format of page numbers in footer
.\"
.br
.2C			\" To create single column output, remove this line
.\"
.nh			\" turn off all hyphenation
