dp_OFILES = dp.o trmsbr.o $(LIBES) 
folder_OFILES = folder.o $(LIBES) 
folder_ILINKS	= ${IDIR}folders
forw_OFILES = forw.o whatnowsbr.o sendsbr.o annosbr.o distsbr.o $(LIBES) 
