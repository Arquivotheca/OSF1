# Workaround for bad code generated by ld.  -dda@krisis 11/7/91
burst.o_OPT_LEVEL =
prompter.o_OPT_LEVEL =

Options = -DSYS5DIR -D_BSD -DISI -DMHRC -DWHATNOW -DMHE -DBSD42 -DBERK \
          -DBSD43 -DLOCKF -DNETWORK -DBIND -DRPATHS -DDPOP -DRPOP -DUK \
          -DFOLDPROT='"0700"' -DMSGPROT='"0600"' -DTYPESIG='void' -DSPOP \
          -DPOPSERVICE='"pop"' -DSPRINTF='int' -DSENDMTS -DSMTP -DPOP -DX400
LIBES = ../config/config.o ../config/version.o ../sbr/libmh.a ../mts/sendmail/libsendmts.a ../mts/x400s/libx400mts.a ../zotnet/libzot.a -lbsd -lcurses -ltermlib
LFLAGS = ${LDFLAGS} ${LIBES} 
CFLAGS = ${CFLAGS} ${Options}
PROGRAMS = alex ali anno burst comp dist folder forw inc mark mhmail \
           mhpath msgchk msh packf pick prompter refile repl rmf \
           rmm scan send show sortm vmh whatnow whom \
           ap conflict dp install-mh mhl post rcvdist rcvpack rcvstore rcvtty \
           spost spop slocal

ILIST	= ${PROGRAMS}
IDIR	= /usr/bin/mh/

inc_IMODE = 4755
inc_IOWNER = root
msgchk_IMODE = 4755
msgchk_IOWNER = root
spop_IMODE = 4755
spop_IOWNER = root

ap_IDIR = /usr/lib/mh/
conflict_IDIR = /usr/lib/mh/
dp_IDIR = /usr/lib/mh/
install-mh_IDIR = /usr/lib/mh/
mhl_IDIR = /usr/lib/mh/
post_IDIR = /usr/lib/mh/
rcvdist_IDIR = /usr/lib/mh/
rcvpack_IDIR = /usr/lib/mh/
rcvstore_IDIR = /usr/lib/mh/
rcvtty_IDIR = /usr/lib/mh/
spost_IDIR = /usr/lib/mh/
spop_IDIR = /usr/lib/mh/
slocal_IDIR = /usr/lib/mh/

alex_OFILES = alex.o aliasbr.o ${LIBES}
ali_OFILES = ali.o aliasbr.o $(LIBES)
anno_OFILES = anno.o annosbr.o $(LIBES)
ap_OFILES = ap.o trmsbr.o $(LIBES)
bbc_OFILES = bbc.o $(LIBES) 
