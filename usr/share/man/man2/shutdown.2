\*Lread\*O(2),
\*Lrecv\*O(2),
\*Lrecvfrom\*O(2),
\*Lrecvmsg\*O(2),
\*Lselect\*O(2),
\*Lsend\*O(2),
\*Lsendto\*O(2),
\*Lsetsockopt\*O(2),
\*Lsocket\*O(2),
\*Lwrite\*O(2)
.iX "shutdown function"
.EQ
delim off
.EN
